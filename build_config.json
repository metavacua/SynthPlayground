{
  "targets": {
    "docs": {
      "output": "knowledge_core/SYSTEM_DOCUMENTATION.md",
      "compiler": "src/tooling/doc_generator.py",
      "sources": [
        "src/tooling/",
        "src/utils/"
      ],
      "description": "Generates system documentation from Python source files."
    },
    "security": {
      "output": "SECURITY.md",
      "compiler": "src/tooling/protocol_compiler.py",
      "sources": [
        "protocols/security/"
      ],
      "options": {
        "--schema-file": "protocols/protocol.schema.json"
      },
      "description": "Compiles security protocols into SECURITY.md."
    },
    "agents": {
      "output": "AGENTS.md",
      "compiler": "src/tooling/hierarchical_compiler.py",
      "sources": [
        "protocols/"
      ],
      "description": "Recursively compiles all AGENTS.md files."
    },
    "readme": {
      "output": "README.md",
      "compiler": "src/tooling/readme_generator.py",
      "sources": [
        "AGENTS.md"
      ],
      "description": "Generates README.md from AGENTS.md."
    },
    "audit": {
      "output": "reports/audit_report.md",
      "compiler": "src/tooling/protocol_auditor.py",
      "sources": [
        "protocols/",
        "logs/activity.log.jsonl"
      ],
      "description": "Runs the protocol auditor to check for compliance."
    }
  }
}