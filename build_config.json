{
  "targets": {
    "docs": {
      "output": "knowledge_core/SYSTEM_DOCUMENTATION.md",
      "compiler": "tooling/doc_generator.py",
      "sources": [
        "tooling/",
        "utils/"
      ],
      "description": "Generates system documentation from Python source files."
    },
    "security": {
      "output": "SECURITY.md",
      "compiler": "tooling/protocol_compiler.py",
      "sources": [
        "protocols/security/"
      ],
      "options": {
        "--schema-file": "protocols/protocol.schema.json"
      },
      "description": "Compiles security protocols into SECURITY.md."
    },
    "agents": {
      "output": "AGENTS.md",
      "compiler": "tooling/hierarchical_compiler.py",
      "sources": [],
      "description": "Recursively compiles all AGENTS.md files."
    },
    "readme": {
      "output": "README.md",
      "compiler": "tooling/readme_generator.py",
      "sources": [
        "AGENTS.md"
      ],
      "description": "Generates README.md from AGENTS.md."
    }
  }
}